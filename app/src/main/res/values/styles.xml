<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="background">@android:color/white</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:navigationIcon" tools:targetApi="lollipop">@drawable/back_arrow</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="MediumText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- transport calender alert dialog -->
    <style name="TransportCalenderThemeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/_40sdp</item>
    </style>
</resources>
