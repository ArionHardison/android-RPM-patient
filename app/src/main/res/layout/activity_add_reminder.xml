<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.midokter.app.ui.activity.addreminder.AddReminderViewModel" />


    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_reminder_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/toolbar_back_img"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:drawableStart="@drawable/ic_arrow_back"
                android:textColor="@color/colorWhite"
                android:text="@string/back"
                android:textSize="@dimen/_14sdp"
                android:focusable="true"
                android:onClick="@{()->viewmodel.onBackButtonClicked()}"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar_reminder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toolbar_reminder"
                app:srcCompat="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tvReminderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_reminder"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar_reminder"
                app:layout_constraintEnd_toEndOf="@+id/toolbar_reminder"
                app:layout_constraintStart_toStartOf="@+id/toolbar_reminder"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cl_reminder_header"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/reminder_name"
                    android:text="@={viewmodel.name}"
                    android:textColor="@color/grey_700"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLiteGrey"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:text="@string/date"
                    android:textSize="@dimen/_12sdp"
                    />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:background="@drawable/bottom_border"
                    android:onClick="@{()->viewmodel.onFromDateClicked()}"
                    android:text="@={viewmodel.displayFromDate}"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/grey_700"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLiteGrey"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:text="@string/time"
                    android:textSize="@dimen/_12sdp"
                    />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewmodel.displayfromTime}"
                    android:onClick="@{()->viewmodel.onFromTimeClicked()}"
                    android:textColor="@color/grey_700"
                    android:paddingBottom="@dimen/_2sdp"
                    android:background="@drawable/bottom_border"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp"/>

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:onCheckedChanged="@{viewmodel::onAlarmChanged}"
                    android:checked="@={viewmodel.alarm}"
                    android:paddingBottom="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:background="@drawable/bottom_border"
                    android:textColor="@color/grey_700"
                    android:text="@string/alarm"/>

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:checked="@={viewmodel.notifyme}"
                    android:paddingBottom="@dimen/_16sdp"
                    android:onCheckedChanged="@{viewmodel::onNotifyMeChanged}"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:background="@drawable/bottom_border"
                    android:textColor="@color/grey_700"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:text="@string/notify_me"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_26sdp"
                    android:background="@drawable/dark_button"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/submit"
                    android:onClick="@{()->viewmodel.onSubmitClicked()}"
                    android:textAllCaps="false"
                    android:paddingStart="@dimen/_46sdp"
                    android:paddingEnd="@dimen/_46sdp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>